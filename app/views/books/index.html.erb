<h1> 家計簿 </h1>
<table class="table table-striped">
<tr>
    <th>年月</th>
    <th>区分</th>
    <th>科目</th>
    <th>金額</th>
    <th>詳細</th>
</tr>

<% @books.each do |book| %>
<tr>
    <td><%= book.year %>年<%= book.month %>月</td>
    <td><%= if book.inout == 1
     "収入"
else  "支出"
end
    %></td>
    <td><%= book.category %></td>
    <td><%= book.amount %>万円</td>
    <td><%= link_to "詳細", book_path(book), class: "btn btn-info" %></td>
</tr>

<% end %>

</table>